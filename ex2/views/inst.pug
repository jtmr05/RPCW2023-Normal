extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 #{name} (NIPC: #{nipc})

  table.w3-table.w3-border.w3-striped
    tr
      th Id
      th DataInicioContrato
      th DataFimContrato
      th NomeInstituicao
      th AreasInvestigacao
    each c in contracts
      tr(style='color:black;')
        td 
          a(href=`/${c._id}`) 
            =c._id
        td= c.DataInicioContrato
        td= c.DataFimContrato
        td 
          a(href=`/inst/${c.NomeInstituicao}`)
            =c.NomeInstituicao
        td= c.AreasInvestigacao

  footer.w3-container.w3-teal
    h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]
